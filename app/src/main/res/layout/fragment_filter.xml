<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:context=".ui.fragments.FilterFragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2">


        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Select category:"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="62dp">

        </TextView>

        <RadioGroup
            android:id="@+id/rgCategory"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="98dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbAll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:checked="true"
                android:padding="12dp"
                android:text="All"
                android:textColor="#D6D6D6"
                android:textSize="14sp">

            </androidx.appcompat.widget.AppCompatRadioButton>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbMen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="12dp"
                android:text="Men"
                android:textColor="#D6D6D6"
                android:textSize="14sp">

            </androidx.appcompat.widget.AppCompatRadioButton>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbWomen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="12dp"
                android:text="Women"
                android:textColor="#D6D6D6"
                android:textSize="14sp">

            </androidx.appcompat.widget.AppCompatRadioButton>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbElec"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="12dp"
                android:text="Electronics"
                android:textColor="#D6D6D6"
                android:textSize="14sp"></androidx.appcompat.widget.AppCompatRadioButton>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbJewelery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="12dp"
                android:text="Jewelery"
                android:textColor="#D6D6D6"
                android:textSize="14sp"></androidx.appcompat.widget.AppCompatRadioButton>


        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Sort:"
            android:layout_marginStart="10dp"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="62dp">

        </TextView>

        <RadioGroup
            android:id="@+id/rgSort"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="98dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbAsc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:checked="true"
                android:padding="12dp"
                android:text="Asc"
                android:textColor="#D6D6D6"
                android:textSize="14sp">

            </androidx.appcompat.widget.AppCompatRadioButton>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbDesc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="12dp"
                android:text="Desc"
                android:textColor="#D6D6D6"
                android:textSize="14sp">

            </androidx.appcompat.widget.AppCompatRadioButton>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Limit:"
            android:layout_marginStart="10dp"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="62dp">

        </TextView>

        <RadioGroup
            android:id="@+id/rgLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="98dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbLimitAll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:checked="true"
                android:padding="12dp"
                android:text="All"
                android:textColor="#D6D6D6"
                android:textSize="14sp">

            </androidx.appcompat.widget.AppCompatRadioButton>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbLimit5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="12dp"
                android:text="5"
                android:textColor="#D6D6D6"
                android:textSize="14sp">

            </androidx.appcompat.widget.AppCompatRadioButton>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbLimit10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="12dp"
                android:text="10"
                android:textColor="#D6D6D6"
                android:textSize="14sp">

            </androidx.appcompat.widget.AppCompatRadioButton>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbLimitCustom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="12dp"
                android:text="Custom"
                android:textColor="#D6D6D6"
                android:textSize="14sp">

            </androidx.appcompat.widget.AppCompatRadioButton>

            <EditText
                android:id="@+id/etLimit"
                android:layout_width="70dp"
                android:layout_height="47dp"
                android:background="@drawable/et_bg"
                android:elevation="2dp"
                android:gravity="center"
                android:hint="....."
                android:inputType="numberSigned"
                android:padding="10dp"
                android:textColor="@color/grayMain"
                android:textColorHint="@color/hintText"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.283"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            </EditText>
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFilter"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="65dp"
            android:background="@drawable/btn_bg"
            android:elevation="7dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Filter"
            android:layout_marginBottom="30dp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/blueMain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            app:layout_constraintVertical_bias="0.464">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/baseline_horizontal_rule_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>

















</androidx.constraintlayout.widget.ConstraintLayout>